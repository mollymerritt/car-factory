package com.ex.beans;

import javax.persistence.Column;
import javax.persistence.EmbeddedId;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.SequenceGenerator;
import javax.persistence.Table;
import javax.validation.constraints.NotNull;

import org.hibernate.validator.constraints.NotEmpty;

@Entity
@Table(name = "CAR_EX")
public class Car {

	@Id
	@Column(name = "CAR_ID")
	@SequenceGenerator(name = "carid", sequenceName = "carid")
	@GeneratedValue(generator = "carid", strategy = GenerationType.SEQUENCE)
	int id;

//	@NotEmpty
//	String make;
//	
//	@NotEmpty
//	String model;
//	
//	@NotNull
//	int year;
//	
//	String trim;	// XLE, SE, XSE

	@EmbeddedId
	private CarIdentity carIdentity;

	@NotEmpty
	String type; // sedan, truck, etc.

	@NotNull
	double price;

	@NotNull
	int cityMileage;

	@NotNull
	int highwayMileage;

	@NotNull
	int combinedMileage;
	
	public Car() {}

	public Car(int id, CarIdentity carIdentity, String type, double price, int cityMileage,
			int highwayMileage, int combinedMileage) {
		super();
		this.id = id;
		this.carIdentity = carIdentity;
		this.type = type;
		this.price = price;
		this.cityMileage = cityMileage;
		this.highwayMileage = highwayMileage;
		this.combinedMileage = combinedMileage;
	}

